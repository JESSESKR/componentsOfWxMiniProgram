<view class="pb_30">
  <view class="mt_20">
    <view class="bg_white p_30"><text class="code" decode="true" space="true">&lt;datePicker bind:change="" format=""&gt;&lt;/datePicker&gt;</text></view>
  </view>
  <view class="mt_20">
    <view class="text-head">参数</view>
    <view class="bg_white p_30">
      <view class="mt_10"><text class="code">title</text>：未选择时的文字</view>
      <view class="mt_10"><text class="code">format</text>：(必填项)输出的类型，预设<text class="code">yyyy-MM-dd</text>,<text class="code">HH:mm:ss</text>,<text class="code">yyyy-MM-dd HH:mm</text>,<text class="code">yyyy-MM-dd HH:mm:ss</text></view>
    </view>
  </view>
  <view class="mt_20">
    <view class="text-head">事件</view>
    <view class="bg_white p_30">
      <view class="mt_10">改变日期事件</view>
      <view class="mt_10">catch:<text class="code">change</text></view>
    </view>
  </view>
</view>

<!-- 默认弹窗 -->
<datePicker title="选择时间" bind:change="changeDatePicker" format="yyyy-MM-dd HH:mm:ss"></datePicker>