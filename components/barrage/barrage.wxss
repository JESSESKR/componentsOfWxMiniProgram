.barrage {
  position: relative;
  overflow: hidden;
}
.singleBarrage {
  position: absolute;
  color: #fff;
  font-size: 32rpx;
  white-space: nowrap;
  animation-fill-mode: both;
}
.singleBarrage .right {
  background-color: rgba(0,0,0,.7);
  padding: 10rpx 60rpx;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  transform-origin: 0 0;
  margin-left: 50rpx;
}
.pic {
  position: absolute;
  left: 0;
  top: -8rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  z-index: 1;
}
.pic image {
  width: 100%;
  height: 100%;
}
.singleBarrage .title {
  font-size: 24rpx;
  color: #ffd905;
  margin-bottom: 4rpx;
}
.singleBarrage .subtitle {
  font-size: 24rpx;
  color: #fff;
}
.singleBarrage .subtitle text {
  color: #ffd905;
}
@keyframes dmanimation {
  from {left: 100%;transform: translateX(0);}
  to {left: 0;transform: translateX(-100%);}
}